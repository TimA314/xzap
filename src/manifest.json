{
  "manifest_version": 3,
  "name": "XZap",
  "version": "1.0",
  "description": "Zap X posts with Lightning payments via Nostr",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["*://*.x.com/*"],
  "action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": { "128": "assets/icon.png" }
}