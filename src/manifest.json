{
  "manifest_version": 3,
  "name": "XZap",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["etch.js"],
      "matches": ["<all_urls>"]
    }
  ]
}