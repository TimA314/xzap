{
  "manifest_version": 3,
  "name": "XZap",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "description": "A Chrome extension for X.com",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.x.com/*"],
      "js": ["content.js", "libs/jsQR.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["etch.js", "decode.js", "libs/jsQR.js"],      
      "matches": ["<all_urls>"]
    }
  ]
}